<!--pages/bilingual/bilingual.wxml-->
<view class="container">
  <view wx:for="{{articleList}}" wx:key="id" class="top-story__section">
    <view class="top-story__image-container">
      <image src="{{item.story_pic.other}}" class="top-story__image" mode="aspectFill"></image>
    </view>

    <navigator url="../article/article?id={{item.id}}&bilingual=true" open-type="navigate">
      <view class="top-story__heading">
        <text>{{item.cheadline}}</text>
      </view>
      <view class="top-story__standfirst">
        <text>{{item.clongleadbody}}</text>
      </view>   
    </navigator>

  </view>
</view>
